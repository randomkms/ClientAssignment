<Window x:Class="ClientAssignment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding Title}"
        Height="400"
        Width="550"
        MinHeight="400"
        MinWidth="500"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="16"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <materialDesign:DialogHost Identifier="RootDialog" CloseOnClickAway="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="110" />
                <RowDefinition MaxHeight="110" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ContentControl prism:RegionManager.RegionName="SearchRegion" MaxWidth="550" />
            <ContentControl Grid.Row="1" prism:RegionManager.RegionName="EmailRegion" MaxWidth="550" />
            <ContentControl Grid.Row="2" prism:RegionManager.RegionName="BrowserRegion" />
        </Grid>
    </materialDesign:DialogHost>
</Window>
