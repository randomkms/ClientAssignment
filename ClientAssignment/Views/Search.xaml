<UserControl x:Class="ClientAssignment.Views.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Text="User id" VerticalAlignment="Center" Margin="30,10,10,10" />
        <TextBox Grid.Column="1" VerticalAlignment="Center"
                 Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Search" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                Command="{Binding SearchCommand}" CommandParameter="{Binding UserId}"/>
    </Grid>
</UserControl>
